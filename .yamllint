---
# Used by yamllint. See: https://yamllint.readthedocs.io/en/stable/configuration.html

extends: default

rules:
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
    indent-sequences: consistent
  line-length: disable
  truthy:
    check-keys: false

ignore: |
  .git/
  .terraform/
  .venv/
  temp-deploy/
